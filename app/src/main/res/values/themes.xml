<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Passtable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <item name="colorPrimary">@color/gray</item>
        <item name="colorSecondary">@color/actionRed</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?toolbarBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="checkboxStyle">@style/DefaultCheckbox</item>
        <item name="textSecondary">@color/textSecondaryLight</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarBackground">@color/white</item>
        <item name="overlayBackground">@color/white</item>
        <item name="iconTint">@color/iconTintLight</item>
        <item name="panelTableBackground">@color/tablePanelLight</item>
        <item name="tagNoneStroke">@color/tagNoneStrokeLight</item>
        <item name="whiteOrBlack">@color/white</item>
        <item name="editBackground">@color/editBackgroundLight</item>
        <item name="settingsItemBackground">@color/editBackgroundLight</item>
        <item name="actionDisabled">@color/actionDisabledLight</item>
        <item name="additionalActionDisabled">@color/additionalActionDisabledLight</item>
        <item name="infoErrorForeground">@color/infoRedPrimaryLight</item>
        <item name="infoErrorBackground">@color/infoRedSecondaryLight</item>
        <item name="notificationTint">@color/notificationTintLight</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>

        <item name="tagNone">@color/tagNoneLight</item>
        <item name="tagRed">@color/tagRedLight</item>
        <item name="tagGreen">@color/tagGreenLight</item>
        <item name="tagBlue">@color/tagBlueLight</item>
        <item name="tagYellow">@color/tagYellowLight</item>
        <item name="tagPurple">@color/tagPurpleLight</item>
    </style>

    <style name="PopupMenuCustomPosRecent" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="background">?whiteOrBlack</item>
        <item name="android:dropDownHorizontalOffset">38dp</item>
        <item name="android:dropDownVerticalOffset">-34dp</item>
    </style>

    <style name="PopupMenuCustomPosTable" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="background">?whiteOrBlack</item>
        <item name="android:dropDownHorizontalOffset">16dp</item>
        <item name="android:dropDownVerticalOffset">-34dp</item>
    </style>

    <style name="ToolbarTint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="tint">?iconTint</item>
    </style>

    <style name="ToolbarTitle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">46dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/selector_mainbutton</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearanceOverlay">@style/ButtonRoundCorners</item>
    </style>

    <style name="AdditionalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">46dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/selector_additionalbutton</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="iconTint">?iconTint</item>
        <item name="android:textColor">?iconTint</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearanceOverlay">@style/ButtonRoundCorners</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:layout_height">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">?iconTint</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">?iconTint</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearanceOverlay">@style/ButtonSharpCorners</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">?iconTint</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">false</item>
        <item name="iconTint">?iconTint</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="shapeAppearanceOverlay">@style/ButtonRoundCorners</item>
    </style>

    <style name="EditData" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">?textSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="ButtonRoundCorners" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">100%</item>
    </style>

    <style name="ButtonSharpCorners" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">0%</item>
    </style>

    <style name="DefaultCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_height">22dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?iconTint</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="buttonTint">@color/selector_checkbox</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/SnackbarBackground</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="SnackbarBackground" parent="">
        <item name="colorOnSurface">@color/snackbarBackground</item>
    </style>

    <style name="SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:textColor">@color/snackbarButton</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textColor">@color/snackbarText</item>
        <item name="android:maxLines">15</item>
    </style>
</resources>