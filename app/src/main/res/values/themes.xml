<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Passtable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/textPrimaryLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?toolbarBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarBackground">@color/white</item>
        <item name="overlayBackground">@color/white</item>
        <item name="iconTint">@color/iconTintLight</item>
        <item name="panelTableBackground">@color/tablePanelLight</item>
        <item name="tagNoneStroke">@color/tagNoneStrokeLight</item>
    </style>

    <style name="PopupMenuCustomPos" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="background">@color/white</item>
        <item name="android:dropDownHorizontalOffset">16dp</item>
        <item name="android:dropDownVerticalOffset">-10dp</item>
    </style>

    <style name="ToolbarTint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="tint">?iconTint</item>
    </style>

    <style name="ToolbarTitle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">46dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/actionRed</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearanceOverlay">@style/ButtonCorners</item>
    </style>

    <style name="AdditionalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">46dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?toolbarBackground</item>
        <item name="iconTint">@color/iconTintLight</item>
        <item name="android:textColor">@color/iconTintLight</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearanceOverlay">@style/ButtonCorners</item>
    </style>

    <style name="ButtonCorners" parent="Widget.MaterialComponents.Button">
        <item name="cornerSize">100%</item>
    </style>
</resources>