<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Passtable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/textPrimaryLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?toolbarBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textColor">@color/textPrimaryDark</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="toolbarBackground">@color/grayOverlay</item>
        <item name="overlayBackground">@color/grayOverlay</item>
        <item name="iconTint">@color/white</item>
        <item name="panelTableBackground">@color/tablePanelDark</item>
        <item name="tagNoneStroke">@color/tagNoneStrokeDark</item>
        <item name="whiteOrBlack">@color/black</item>
    </style>
</resources>